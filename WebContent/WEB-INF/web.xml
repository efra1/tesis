<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_mcm" version="3.1">
  <servlet>
    <servlet-name>taller3</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <multipart-config>
      <location>/controladores</location>
      <max-file-size>5242880</max-file-size>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>taller3</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>3600</session-timeout>
  </session-config>
</web-app>